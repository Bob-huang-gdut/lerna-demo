{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "ignoreChanges": [
      "ignored-file",
      "**/__tests__/**",
      "**/*.md"
    ],
    "publish": {
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish %s"
    }
  },
  "version": "independent"
}
